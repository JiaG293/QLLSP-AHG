<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.openjfx.qllspahg.gui.BangLuongCongNhanController">
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" BorderPane.alignment="CENTER">
            <content>
                <TableView fx:id="tblBangLuongCongNhan" editable="true" onMouseClicked="#bangLuongDuocChon" tableMenuButtonVisible="true">
                    <columns>
                        <TableColumn fx:id="colSTTLuong" prefWidth="30.0" text="STT" />
                        <TableColumn fx:id="colMaCN" prefWidth="100.0" text="Mã công nhân" />
                        <TableColumn fx:id="colHoVaTenCN" prefWidth="264.0" text="Họ và tên">
                            <columns>
                                <TableColumn fx:id="colHoCN" prefWidth="183.0" text="Họ" />
                                <TableColumn fx:id="colTenCN" prefWidth="117.0" text="Tên" />
                            </columns>
                  </TableColumn>
                        <TableColumn fx:id="colToSanXuatCN" minWidth="8.79998779296875" prefWidth="109.0" text="Tổ sản xuất" />
                        <TableColumn minWidth="8.79998779296875" prefWidth="700.0" text="Ngày tạo - nhận">
                            <columns>
                                <TableColumn fx:id="colNgayTao" minWidth="9.60003662109375" prefWidth="150.0" text="Ngày tạo bảng lương" />
                                <TableColumn fx:id="colNgayTra" prefWidth="150.0" text="Ngày nhận lương" />
                            </columns>
                        </TableColumn>
                        <TableColumn prefWidth="522.0" text="Lương">
                            <columns>
                                <TableColumn fx:id="colLuongNhanDuoc" prefWidth="180.0" text="Lương nhận được" />
                                <TableColumn fx:id="colLuongThucTe" prefWidth="180.0" text="Lương thực tế" />
                            </columns>
                        </TableColumn>
                        <TableColumn fx:id="colTrangThai" prefWidth="100.0" text="Trạng thái" />
                  <TableColumn fx:id="colLuaChon" prefWidth="60.0" text="Chọn" />
                    </columns>
                </TableView>
            </content>
        </ScrollPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" fillHeight="false" spacing="50.0">
            <children>
                <Button maxWidth="300.0" mnemonicParsing="false" onAction="#lamMoiDanhSachBangLuong" prefWidth="200.0" text="Làm mới">
                    <graphic>
                        <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/icons/edit-removebg-preview.png" />
                            </image>
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </HBox.margin>
                </Button>
                <Button fx:id="btnXacNhanThanhToan" maxWidth="300.0" mnemonicParsing="false" onAction="#capNhatThanhToanLuong" prefWidth="200.0" text="Xác nhận thanh toán">
                    <graphic>
                        <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/icons/edit-removebg-preview.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="btnXuatBangLuong" maxWidth="300.0" mnemonicParsing="false" onAction="#xuatBangLuongDuocChon" prefWidth="200.0" text="Xuất bảng lương chọn">
                    <graphic>
                        <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../../images/icons/edit-removebg-preview.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Button maxWidth="300.0" mnemonicParsing="false" onAction="#chonTatCaCacHang" prefWidth="200.0" text="Chọn tất cả">
               <graphic>
                  <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/icons/edit-removebg-preview.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
        </HBox>
    </bottom>
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefWidth="1180.0" spacing="15.0">
                    <children>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Mã công nhân" />
                                <TextField fx:id="tfLocMaCN" prefHeight="26.0" prefWidth="152.0" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Tên công nhân" />
                                <TextField fx:id="tfLocTenCN" prefHeight="26.0" prefWidth="152.0" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label text="Tháng - Năm" />
                                <ComboBox fx:id="cbxLocThangTinhLuongCN" onAction="#kiemTraThang" prefHeight="26.0" prefWidth="120.0" />
                                <ComboBox fx:id="cbxLocNamTinhLuongCN" prefHeight="26.0" prefWidth="120.0" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="30.0" prefWidth="270.0" spacing="10.0">
                            <children>
                                <Label text="Tổ sản xuất: " />
                                <ComboBox fx:id="cbxLocToSanXuatCN" prefHeight="26.0" prefWidth="154.0" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="220.0" spacing="10.0">
                            <children>
                                <Label text="Trạng thái" />
                                <ComboBox fx:id="cbxTrangThaiThanhToan" prefHeight="26.0" prefWidth="100.0" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </padding>
                        </HBox>
                        <Button mnemonicParsing="false" onAction="#layDuLieuLocLuongCongNhan" text="Lấy dữ liệu " />
                    </children>
                </HBox>
                <HBox alignment="CENTER">
                    <children>
                        <Label fx:id="lblThangNamLuongCN" text="Bảng lương tháng xx-xxxx">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </top>
</BorderPane>
